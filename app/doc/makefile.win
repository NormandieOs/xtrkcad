#
# Makefile for halibut based documentation
#

HALIBUT = ..\tools\halibut\halibut

all: help

BUTFILES = \
	chmconf.but \
	intro.but \
	mainw.but \
	filem.but \
	editm.but \
	viewm.but \
	addm.but \
	changem.but \
	drawm.but \
	managem.but \
	optionm.but \
	win_help.but \
	map_hot.but \
	appendix.but

help: ..\bin\Debug\xtrkcad.chm ..\bin\Release\xtrkcad.chm
	
..\bin\Debug\xtrkcad.chm: xtrkcad.chm
	copy .\xtrkcad.chm ..\bin\Debug\xtrkcad.chm	

..\bin\Release\xtrkcad.chm: xtrkcad.chm
	copy .\xtrkcad.chm ..\bin\Release\xtrkcad.chm	

xtrkcad.chm: xtrkcad.hhp
	-2 hhc $*
	
xtrkcad.hhp: $(BUTFILES)
	$(HALIBUT) $**
	
clean:
	del *.html
	del xtrkcad.hhp
	del xtrkcad.hhc
	del xtrkcad.chm
